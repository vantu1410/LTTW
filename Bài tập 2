using System;
using System.Collections.Generic;
using System.Linq;

class Student
{
    public int Id { get; set; }
    public string Name { get; set; }
    public int Age { get; set; }
}

class Program
{
    static void Main()
    {
        // Tao danh sach hoc sinh
        List<Student> students = new List<Student>()
        {
            new Student { Id = 1, Name = "Tu", Age = 17 },
            new Student { Id = 2, Name = "Loc", Age = 22 },
            new Student { Id = 3, Name = "Trinh", Age = 21 },
            new Student { Id = 4, Name = "Anh", Age = 20 },
            new Student { Id = 5, Name = "Van Tu", Age = 25 }
        };

        // a. In toan bo danh sach
        Console.WriteLine("Danh sach hoc sinh:");
        foreach (var s in students)
            Console.WriteLine($"{s.Id} - {s.Name} - {s.Age}");

        // b. Hoc sinh co tuoi tu 15 den 18
        Console.WriteLine("\nHoc sinh co tuoi tu 15 den 18:");
        var tuoi1518 = students.Where(s => s.Age >= 15 && s.Age <= 18);
        foreach (var s in tuoi1518)
            Console.WriteLine($"{s.Id} - {s.Name} - {s.Age}");

        // c. Hoc sinh co ten bat dau bang "A"
        Console.WriteLine("\nHoc sinh co ten bat dau bang 'A':");
        var batDauA = students.Where(s => s.Name.StartsWith("A"));
        foreach (var s in batDauA)
            Console.WriteLine($"{s.Id} - {s.Name} - {s.Age}");

        // d. Tinh tong tuoi
        int tongTuoi = students.Sum(s => s.Age);
        Console.WriteLine($"\nTong tuoi cac hoc sinh: {tongTuoi}");

        // e. Hoc sinh co tuoi lon nhat
        var maxAge = students.Max(s => s.Age);
        var lonNhat = students.Where(s => s.Age == maxAge);
        Console.WriteLine("\nHoc sinh co tuoi lon nhat:");
        foreach (var s in lonNhat)
            Console.WriteLine($"{s.Id} - {s.Name} - {s.Age}");

        // f. Sap xep theo tuoi tang dan
        Console.WriteLine("\nDanh sach sau khi sap xep theo tuoi:");
        var sapXep = students.OrderBy(s => s.Age);
        foreach (var s in sapXep)
            Console.WriteLine($"{s.Id} - {s.Name} - {s.Age}");

        Console.ReadKey();
    }
}
