        private void btnOrder_Click(object sender, EventArgs e)
        {
            string khachHang = txtCustome.Text;
            string dienThoai = txtPhone.Text;

            string sanPham = "";
            if (lstProducts.SelectedItems.Count > 0)
            {
                foreach (var item in lstProducts.SelectedItems)
                {
                    sanPham += "- " + item.ToString() + "\n";
                }
            }
            else
            {
                sanPham = "(Chưa chọn sản phẩm)\n";
            }

            string thanhToan = "";
            if (cboPayment.SelectedItem != null)
                thanhToan = cboPayment.SelectedItem.ToString();

            txtOrderInfo.Text = "Thông tin đặt hàng \n";
            txtOrderInfo.Text += "Khách hàng: " + khachHang + "\n";
            txtOrderInfo.Text += "Điện thoại: " + dienThoai + "\n";
            txtOrderInfo.Text += "Sản phẩm đặt mua:\n" + sanPham;
            txtOrderInfo.Text += "Cách thanh toán: " + thanhToan;

        }
    }
}
